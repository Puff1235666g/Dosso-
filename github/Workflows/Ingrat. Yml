name: nightly ingest
on:
  schedule:
    - cron: '0 4 * * *'  # 04:00 UTC tous les jours
  workflow_dispatch:     # bouton manuel
jobs:
  ingest:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - run: npm ci
      - run: mkdir -p data
      - run: npm start
      - uses: actions/upload-artifact@v4
        with:
          name: dosso-db
          path: data/dosso.db
